{
  "name": "dev-no-kage/project-initializer",
  "description": "Projet PHP structuré avec une architecture MVC minimaliste et gestion de dépendances via YAML.",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Gorgui Maréna : DevnoKage",
      "email": "gorguimarena@gmail.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\Controller\\": "src/controller/",
      "App\\Service\\": "src/service/",
      "App\\Entity\\": "src/entity/",
      "App\\Repository\\": "src/repository/",
      "DevNoKage\\Abstract\\": "app/core/abstract/",
      "DevNoKage\\Enums\\": "app/core/enums/",
      "DevNoKage\\Interface\\": "app/core/Interfaces/",
      "DevNoKage\\": "app/core/"
    },
    "files": [
      "app/config/helpers.php"
    ]
  },
  "require": {
    "php": ">=8.0",
    "vlucas/phpdotenv": "^5.6",
    "symfony/yaml": "^7.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "keywords": [
    "php",
    "mvc",
    "yaml",
    "dependency-injection",
    "framework",
    "lightweight",
    "bootstrap",
    "starter"
  ],
    "scripts": {
    "database:migrate": "php migration/migration.php",
    "database:seeder": "php seeders/seeder.php"
  }
}
